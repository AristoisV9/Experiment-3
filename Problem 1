#include<iostream>

using namespace std;

int main()
{
	int list[10]; 
	int a;
	float b;
	float c;
	int x;
	float y;
	float z;
	
	cout<<"Enter 10 integers and this program will show the smallest and largest interger as well as their sum and average!\n";
	y=0;
	for(x=0;x<10;x++)
	{
		cin>>list[x];
		y = y + list[x];
	}
	z = y/10;
	for(x=1;x<10;x++)
	{
		if(list[a]<list[x])
		a = x;
	}
	b = list[a];
	for(x=1;x<10;x++)
	{
		if(list[a]>list[x])
		a = x;
	}
	c = list[a];
	cout<<"Smallest Int: "<< c;
	cout<<"\nLargest Int: "<< b;
	cout<<"\nSum: "<< y;
	cout<<"\nAverage: "<< z;
	cin.ignore();
	return 0;
}
