#include<iostream>

using namespace std;

int main()
{
	int list[7];
	int lista[7];
	int listb[7];
	int x;
	int y;
	
	cout<<"Enter the temparaturs of Province A, B, and C for a week and this program will display them!\n";
	for(x=1;x<=7;x++)
	{
		cout<<"Province A, Day "<< x <<": ";
		cin>>list[x];
	}
	for(x=1;x<=7;x++)
	{
		cout<<"Province B, Day "<< x <<": ";
		cin>>lista[x];
	}
	for(x=1;x<=7;x++)
	{
		cout<<"Province C, Day "<< x <<": ";
		cin>>listb[x];
	}
	cout<<"\n\n";
	for(x=1;x<=7;x++)
	{
		cout<<"Province A, Day "<< x  <<"= "<< list[x] <<"\n";
	}
	for(x=1;x<=7;x++)
	{
		cout<<"Province B, Day "<< x  <<"= "<< lista[x] <<"\n";
	}
	for(x=1;x<=7;x++)
	{
		cout<<"Province C, Day "<< x  <<"= "<< listb[x] <<"\n";
	}
	cin.ignore();
	return 0;
}
